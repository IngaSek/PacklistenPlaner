<Window x:Class="PacklistenPlaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PacklistenPlaner"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type local:ReisenViewModel}">
            <local:ReisenView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:ReiseViewModel}">
            <local:ReiseView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:PersonenViewModel}">
            <local:PersonenView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:VorlagenViewModel}">
            <local:VorlagenView />
        </DataTemplate>
    </Window.Resources>
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <ToggleButton Command="{Binding NavigateToReisenCommand}" IsChecked="{Binding IsReisenView, Mode=OneWay}">Reisen</ToggleButton>
            <ToggleButton Command="{Binding NavigateToPersonenCommand}" IsChecked="{Binding IsPersonenView, Mode=OneWay}">Personen</ToggleButton>
            <ToggleButton Command="{Binding NavigateToVorlagenCommand}" IsChecked="{Binding IsVorlagenView, Mode=OneWay}">Vorlagen</ToggleButton>
        </ToolBar>
        <ToolBar DockPanel.Dock="Bottom" HorizontalAlignment="Right" >
            <ToggleButton Command="{Binding LadenCommand}" IsEnabled="False">Laden</ToggleButton>
            <ToggleButton Command="{Binding SpeichernCommand}">Speichern</ToggleButton>
        </ToolBar>
        <ContentControl Content="{Binding CurrentViewModel}" Validation.ErrorTemplate="{x:Null}" /> 
    </DockPanel>
</Window>
