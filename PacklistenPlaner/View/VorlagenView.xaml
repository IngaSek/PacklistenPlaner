<UserControl x:Class="PacklistenPlaner.VorlagenView"
             x:Name="VorlagenViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PacklistenPlaner"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Command="{Binding VorlageHinzufuegenCommand}">Neue Vorlage</Button>
            <Button Command="{Binding VorlageEntfernenCommand}">Vorlage entfernen</Button>
            <Button Command="{Binding GegenstandHinzufuegenCommand}">Neuer Gegenstand</Button>
            <Button Command="{Binding GegenstandEntfernenCommand}">Gegenstand entfernen</Button>
        </ToolBar>

        <ListBox ItemsSource="{Binding Vorlagen}" SelectedItem="{Binding SelectedVorlage, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="2"/>
                    <Setter Property="Padding" Value="0"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel HorizontalAlignment="Stretch">
                        <Expander IsExpanded="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Margin="5">
                            <Expander.Header>
                                <DockPanel>
                                    <TextBox DockPanel.Dock="Left" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" FontSize="15" MinWidth="200"/>
                                </DockPanel>
                            </Expander.Header>
                            <StackPanel>
                                <Grid Margin="2, 5, 0, 5" HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Text="Gegenstand" IsReadOnly="True"/>
                                    <TextBox Grid.Column="1" Text="Standardmenge" IsReadOnly="True"/>
                                    <TextBox Grid.Column="2" Text="Standardmenge gilt pro Tag" IsReadOnly="True"/>
                                </Grid>

                                <ListBox ItemsSource="{Binding Gegenstaende}" SelectedItem="{Binding DataContext.SelectedGegenstand, ElementName=VorlagenViewControl, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" HorizontalAlignment="Stretch">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="Margin" Value="0"/>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="5" HorizontalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="5*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBox Grid.Column="0" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"/>
                                                <TextBox Grid.Column="1" Text="{Binding Standardmenge, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"/>
                                                <CheckBox Grid.Column="2" IsChecked="{Binding StandardmengeProTag, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</UserControl>
