<UserControl x:Class="PacklistenPlaner.ReiseView" 
      x:Name="ReiseViewControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PacklistenPlaner"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Command="{Binding PacklisteHinzufuegenCommand}">Neue Packliste</Button>
            <Button Command="{Binding PacklisteEntfernenCommand}">Packliste entfernen</Button>
            <Button Command="{Binding EintragHinzufuegenCommand}">Neuer Eintrag</Button>
            <Button Command="{Binding EintragEntfernenCommand}">Eintrag entfernen</Button>
        </ToolBar>
        
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="5">
            <Button Margin="2" Padding="2" IsDefault="True" Command="{Binding OkCommand}">Ok</Button>
            <Button Margin="2" Padding="2" IsCancel="True" Command="{Binding AbbrechenCommand}">Abbrechen</Button>
        </StackPanel>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" DockPanel.Dock="Top" Margin="5">
                <TextBox Margin="5" Padding="2" FontSize="25" Text="{Binding Titel, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                <StackPanel Orientation="Horizontal">
                    <Label Margin="2" Padding="2" Width="100" Content="Geplant von:"/>
                    <ComboBox Margin="2" Padding="2" Width="200" ItemsSource="{Binding AllePersonen}" SelectedItem="{Binding Planender, UpdateSourceTrigger=PropertyChanged}" Text="{Binding PlanenderName, UpdateSourceTrigger=PropertyChanged}" IsEditable="True" IsTextSearchEnabled="True" DisplayMemberPath="Name"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Margin="2" Padding="2" Width="100" Content="Startdatum:"/>
                    <DatePicker Margin="2" Padding="2" Width="200" SelectedDate="{Binding Startdatum, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                    <Label Margin="2" Padding="2" Width="100" Content="Enddatum:"/>
                    <DatePicker Margin="2" Padding="2" Width="200" SelectedDate="{Binding Enddatum, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                    <Label Margin="2" Padding="2" Width="75" Content="Tage:"/>
                    <TextBox Margin="2" Padding="2" Width="75" Text="{Binding Tage, Mode=OneWay}" IsReadOnly="True"/>
                </StackPanel>
                <TextBox Margin="5" Padding="2" Height="100" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Text="{Binding Beschreibung, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="Packlisten:" Margin="5"/>

                <Grid Margin="1,5,0,5" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Text="Vorlage:" IsReadOnly="False"/>
                    <ComboBox Grid.Column="1" Margin="5,0,5,0" ItemsSource="{Binding Vorlagen}" SelectedItem="{Binding SelectedVorlage, UpdateSourceTrigger=PropertyChanged}" IsEditable="True" IsTextSearchEnabled="True" DisplayMemberPath="Name"/>
                    <Button Grid.Column="2" Command="{Binding VorlageNutzenCommand}">Vorlage hinzufügen</Button>
                </Grid>

                <ListBox ItemsSource="{Binding Packlisten}" SelectedItem="{Binding SelectedPackliste, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Margin" Value="2"/>
                            <Setter Property="Padding" Value="0"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel HorizontalAlignment="Stretch">
                                <Expander IsExpanded="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Margin="5">
                                    <Expander.Header>
                                        <DockPanel Margin="5">
                                            <TextBox DockPanel.Dock="Left" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" FontSize="15" MinWidth="200"/>
                                        </DockPanel>
                                    </Expander.Header>
                                    <StackPanel>
                                        <Grid Margin="5" HorizontalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="5*"/>
                                                <ColumnDefinition Width="5*"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0" Text="Gegenstand" IsReadOnly="True"/>
                                            <TextBox Grid.Column="1" Text="Verantwortlicher" IsReadOnly="True"/>
                                            <TextBox Grid.Column="2" Text="Menge" IsReadOnly="True"/>
                                            <TextBox Grid.Column="3" Text="Status" IsReadOnly="True"/>
                                        </Grid>

                                        <ListBox ItemsSource="{Binding Eintraege}" SelectedItem="{Binding DataContext.SelectedEintrag, ElementName=ReiseViewControl, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" HorizontalAlignment="Stretch">
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="ListBoxItem">
                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                    <Setter Property="Padding" Value="0"/>
                                                    <Setter Property="Margin" Value="0"/>
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="5" HorizontalAlignment="Stretch">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="5*"/>
                                                            <ColumnDefinition Width="5*"/>
                                                            <ColumnDefinition Width="2*"/>
                                                            <ColumnDefinition Width="1*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBox Grid.Column="0" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"/>
                                                        <ComboBox Grid.Column="1" ItemsSource="{Binding DataContext.AllePersonen, ElementName=ReiseViewControl}" SelectedItem="{Binding Verantwortlicher, UpdateSourceTrigger=PropertyChanged}" IsEditable="True" IsTextSearchEnabled="True" DisplayMemberPath="Name" IsEnabled="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"/>
                                                        <TextBox Grid.Column="2" Text="{Binding Menge, UpdateSourceTrigger=PropertyChanged}"/>
                                                        <CheckBox Grid.Column="3" IsChecked="{Binding Status, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </StackPanel>
                                </Expander>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
